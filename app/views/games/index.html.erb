<!-- app/views/games/index.html.erb -->
<h1>Your games:</h1>
<div class="overflow-x-auto">
  <table class="table w-full">
    <!-- head -->
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Shareable</th>
        <th>Public</th>
        <th>Link</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game.name %></td>
          <td><%= game.status %></td>
          <td><%= game.shareable ? "Yes" : "No" %></td>
          <td><%= game.public ? "Yes" : "No" %></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
